extends layout/layout

block vars
    -title = 'Giỏ hàng'
    -bodyClass = 'page-acc'
block container 
    section.sec-acc
        .acc 
            .container 
                .acc-flex 
                    input(type="checkbox").acc-checkside#acc-checkside
                    label.acc-side-overlay(for="acc-checkside")
                    .acc-side 
                        .wrapper 
                            .acc-heads 
                                .iwt 
                                    .icon 
                                        +img("avatar.jpg")
                                    .b-gr 
                                        p.txt Nguyễn Văn A
                                        p.des ID: 1234
                            .acc-bodies 
                                a(href="").acc-item 
                                    .iwt 
                                        .icon 
                                            +img("ic-acc1.svg")
                                        p.txt Thông tin tài khoản
                                a(href="").acc-item  
                                    .iwt 
                                        .icon 
                                            +img("ic-acc2.svg")
                                        p.txt Thay đổi mật khẩu
                                a(href="").acc-item
                                    .iwt 
                                        .icon 
                                            +img("ic-acc3.svg")
                                        p.txt Địa chỉ giao hàng
                                a(href="").acc-item.active 
                                    .iwt 
                                        .icon 
                                            +img("ic-acc4.svg")
                                        p.txt Đơn hàng
                                a(href="").acc-item 
                                    .iwt 
                                        .icon 
                                            +img("ic-acc5.svg")
                                        p.txt Công nợ
                                .acc-cn 
                                    span.txt -730,000,000 vnđ
                                    p.des Thanh toán trước ngày 5 hàng tháng
                            .acc-bottoms 
                                +Btn("Đăng xuất","","pri full")
                    .acc-main 
                        .wrapper 
                            .acc-heads 
                                h1.acc-title Chi tiết đơn hàng#123456
                                label.acc-btnside(for="acc-checkside")
                                    i.fa-solid.fa-sidebar
                            .acc-bodies 
                                .acc-price.row 
                                    .acc-price-left.col 
                                        .inner
                                            .acc-total 
                                                p.tt Giá đơn hàng
                                                .acc-total-lines 
                                                    span.name Giá tạm tính
                                                    span.val  3,250,000 vnđ
                                                .acc-total-lines 
                                                    span.name Thuế VAT 10%
                                                    span.val  32,500 vnđ
                                                .acc-total-lines.total 
                                                    span.name Tống đơn
                                                    span.val  3,250,000 vnđ
                                    .acc-price-right.col 
                                        .inner 
                                            +Btn("Xuất file PDF","","white full")
                                            +Btn("Mua lại đơn hàng","","third full")
                                .acc-price-table 
                                    table 
                                        each val,index in Array(4)
                                            tr 
                                                td 
                                                    .acc-price-item 
                                                        .img 
                                                            +img(`shoe${index + 1}.jpg`)
                                                        .info Nike Air Max Plus
                                                td 
                                                    .acc-price-variation 
                                                        span.txt  Size: EU 38.5
                                                        span.txt  Màu sắc: Xám nhạt
                                                td 
                                                    .acc-price-variation 
                                                        span.txt Số lượng: 03
                                                td 
                                                    .acc-price-total 
                                                        span.txt  3,250,000 vnđ                                                                                 
                                .acc-pagi 
                                    +PageNumber

                        
                        
