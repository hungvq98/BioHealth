extends layout/layout

block vars
    -title = 'Mật khẩu'
    -bodyClass = 'page-acc'

block container
    section.sec-breadcrumb
        .container
            +BreadCrumb([{txt:"Mật khẩu"}])
    section.sec-acc 
        .acc 
            .container
                .acc__flex.row
                    .acc__left.col 
                        .wrapper
                            .acc__box.scrollContainer 
                                a(href="").acc__box-item.buttons.active
                                    .iwt 
                                        .icon 
                                            +img("ic-acc-usr.svg") 
                                        p.txt Thông tin tài khoản
                                a(href="").acc__box-item.buttons
                                    .iwt 
                                        .icon 
                                            +img("ic-acc-mana.svg") 
                                        p.txt Quản lý đơn hàng
                                a(href="").acc__box-item.buttons
                                    .iwt 
                                        .icon 
                                            +img("ic-acc-heart.svg") 
                                        p.txt Sản phẩm yêu thích
                    .acc__right.col
                        .wrapper 
                            .acc__headline 
                                .acc__heads 
                                    a(href="").acc__heads-item 
                                        p.txt thông tin
                                    a(href="").acc__heads-item 
                                        p.txt địa chỉ
                                    a(href="").acc__heads-item.active 
                                        p.txt mật khẩu
                            .acc__contents 
                                .acc__info.pwd 
                                    +Form 
                                        +FormPass("Mật khẩu hiện tại ","","Mật khẩu hiện tại ","col")
                                        +FormPass("Mật khẩu mới","","Mật khẩu mới","col")
                                        +FormPass("Xác nhận mật khẩu","","Xác nhận mật khẩu","col")
                                        +FormWrap("")
                                            +Btn("Lưu thông tin","","pri","")
    +secSale