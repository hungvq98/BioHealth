extends layout/layout

block vars
    -title = 'Thông tin đơn hàng'
    -bodyClass = 'page-acc'

block container
    section.sec-breadcrumb
        .container
            +BreadCrumb([{txt:"Thông tin đơn hàng"}])
    section.sec-order
        .order
            .container
                +headVerti("mb-24")
                    +title40("THÔNG TIN ĐƠN HÀNG")
                .order__flex.row
                    .order__left.col
                        .wrapper
                            .acc__info 
                                +Form 
                                    +FormIp("Họ","","Họ","col per5")
                                    +FormIp("Tên","","Tên","col per5")
                                    +FormIp("Email","","Email","col per5")
                                    +FormIp("Số điện thoại","","Số điện thoại","col per5")
                                    +FormSelect("Thành phố, tỉnh","","Thành phố, tỉnh","col per5")
                                    +FormSelect("Phường","","Phường","col per5")
                                    +FormIp("Địa chỉ cụ thể","","Địa chỉ cụ thể","col")
                                    .form-ip.col 
                                        .acc__info-flex     
                                            .acc__info-choose 
                                                span.txt Loại địa chỉ:
                                                .acc__info-choose-boxes 
                                                    label.acc__info-choose-box 
                                                        input(type="radio" name="acc__info-choose-box" value="1")
                                                        span.txt Nhà riêng
                                                    label.acc__info-choose-box 
                                                        input(type="radio" name="acc__info-choose-box" value="2")
                                                        span.txt Công ty
                                            label.acc__info-switch 
                                                input(type="checkbox" name="acc__info-switch" value="1")
                                                .acc__info-switch-box
                                                p.acc__info-switch-txt Đặt làm địa chỉ mặc định
                                    +FormWrap("")
                                        +Btn("Lưu thông tin","","pri","")
                    .order__right.col
                        .wrapper
                            .order__cart 
                                .order__cart-bodies 
                                    .order-box__block 
                                        .heads 
                                            p.txt  đơn hàng của bạn 
                                                span.txt-sup (3)
                                            .icon 
                                                i.fa-solid.fa-chevron-up
                                        .bodies 
                                            table   
                                                tbody 
                                                    each val,index in Array(3)
                                                        tr 
                                                            td 
                                                                span.txt Tinh chất bí đao 70ml - Tặng dung dịch chấm mụn bí đao 5ml
                                                            td x1 
                                                            td 299.000 đ
                                    .order__cart-method 
                                        p.order__cart-title Phương thức thanh toán
                                        .order__cart-method-item 
                                            label.checker
                                                input(type="radio", name="method")
                                                .iwt 
                                                    .icon 
                                                        +img("ic-code.svg")
                                                    p.txt Thanh toán khi nhận hàng
                                                span.sqr 
                                            label.checker
                                                input(type="radio", name="method")
                                                .iwt 
                                                    .icon 
                                                        +img("ic-ck.svg")
                                                    p.txt Thanh toán khi nhận hàng
                                                span.sqr 
                                            label.checker
                                                input(type="radio", name="method")
                                                .iwt 
                                                    .icon 
                                                        +img("ic-vnpay.svg")
                                                    p.txt Thanh toán khi nhận hàng
                                                span.sqr 
                                    .order-box__totals 
                                        .order-box__total 
                                            p.txt Sản phẩm
                                            p.val 3
                                        .order-box__total 
                                            p.txt Tạm tính
                                            p.val 500.000 đ
                                        .order-box__total 
                                            p.txt Giảm giá
                                            p.val -50.000 đ
                                        .order-box__total 
                                            p.txt Thuế
                                            p.val 50.000 đ
                                        .order-box__total 
                                            .txt Vận chuyển
                                                .txt-icon   
                                                    +img("viettelpost.svg")  
                                            p.val 0 đ 
                                        .order-box__total.total 
                                            p.txt Tổng cộng
                                            p.val 1.709.100 đ
                                a(href="").order__cart-btn 
                                    .iwt
                                        p.txt Tiếp tục thanh toán
                                        .icon 
                                            +img("ic-arrow.svg")

    +secSale