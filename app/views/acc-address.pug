extends layout/layout

block vars
    -title = 'Địa chỉ'
    -bodyClass = 'page-acc'

block container
    section.sec-breadcrumb
        .container
            +BreadCrumb([{txt:"Địa chỉ"}])
    section.sec-acc 
        .acc 
            .container
                .acc__flex.row
                    .acc__left.col 
                        .wrapper
                            .acc__box.scrollContainer 
                                a(href="").acc__box-item.buttons.active
                                    .iwt 
                                        .icon 
                                            +img("ic-acc-usr.svg") 
                                        p.txt Thông tin tài khoản
                                a(href="").acc__box-item.buttons
                                    .iwt 
                                        .icon 
                                            +img("ic-acc-mana.svg") 
                                        p.txt Quản lý đơn hàng
                                a(href="").acc__box-item.buttons
                                    .iwt 
                                        .icon 
                                            +img("ic-acc-heart.svg") 
                                        p.txt Sản phẩm yêu thích
                    .acc__right.col
                        .wrapper 
                            .acc__headline 
                                .acc__heads 
                                    a(href="").acc__heads-item 
                                        p.txt thông tin
                                    a(href="").acc__heads-item.active 
                                        p.txt địa chỉ
                                    a(href="").acc__heads-item 
                                        p.txt mật khẩu
                                +Btn("Thêm địa chỉ mới","","second rev","ic-plus.svg")
                            .acc__contents 
                                .acc__address
                                    each val,index in Array(3) 
                                        .acc__address-item 
                                            .inner 
                                                .inner-left 
                                                    p.name Địa chỉ 1
                                                    p.des 39 Nguyễn Bỉnh Khiêm P1, Q.Gò Vấp, TP. Hồ Chí Minh
                                                .inner-right 
                                                    a(href="").inner-btn.edit
                                                        +img("ic-acc-edit.svg") 
                                                    a(href="").inner-btn.del
                                                        +img("ic-acc-remove.svg") 
    +secSale